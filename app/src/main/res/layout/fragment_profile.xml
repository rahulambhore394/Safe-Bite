<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:id="@+id/main">


    <ImageView
        android:id="@+id/top_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-94dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/shape" />
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/profile_layout"
        android:background="@drawable/profile_photo_shape">

        <androidx.cardview.widget.CardView
            android:layout_width="155dp"
            android:layout_height="155dp"
            app:cardCornerRadius="250dp"
            app:cardBackgroundColor="@color/white">



            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/user_photo_profile"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_centerHorizontal="true"
        android:text="User"
        android:layout_below="@id/profile_layout"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/secondaryColor"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/top_shape"
        android:id="@+id/username_card">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_username"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/top_shape"
                android:text="Username :"
                android:textSize="20sp"
                android:textColor="@color/secondaryColor"
                android:fontFamily="sans-serif-black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_username"
                android:layout_below="@id/tv_username"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/primaryColor"
                android:text=""
                android:drawableStart="@drawable/user__icon"
                android:drawablePadding="9dp"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-black"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-10dp"
        android:elevation="15dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/username_card"
        android:id="@+id/email_card">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_username"
                android:layout_marginLeft="30dp"
                android:fontFamily="sans-serif-black"
                android:text="Email :"
                android:textColor="@color/secondaryColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_email"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-black"
                android:drawableStart="@drawable/mail_icon"
                android:drawablePadding="9dp"
                android:text=""
                android:textColor="@color/primaryColor"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="15dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/email_card"
        android:id="@+id/mobile_card">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_mobile_no"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/et_email"
                android:text="Mobile No :"
                android:textSize="20sp"
                android:textColor="@color/secondaryColor"
                android:fontFamily="sans-serif-black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_mobile_no"
                android:layout_below="@id/tv_mobile_no"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/primaryColor"
                android:text=""
                android:drawableStart="@drawable/phone_icon"
                android:drawablePadding="9dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="15dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/mobile_card"
        android:id="@+id/emergency_mobile_card">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_emergency_mobile_no"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/et_email"
                android:text="Mobile No :"
                android:textSize="20sp"
                android:textColor="@color/secondaryColor"
                android:fontFamily="sans-serif-black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_emergency_mobile_no1"
                android:layout_below="@id/tv_mobile_no"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/primaryColor"
                android:text=""
                android:drawableStart="@drawable/phone_icon"
                android:drawablePadding="9dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_emergency_mobile_no2"
                android:layout_below="@id/et_emergency_mobile_no1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/primaryColor"
                android:text=""
                android:drawableStart="@drawable/phone_icon"
                android:drawablePadding="9dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_logout"
        android:text="Logout"
        android:textColor="@color/primaryColor"
        android:backgroundTint="@color/secondaryColor"
        android:textSize="18dp"
        android:fontFamily="sans-serif-black"
        android:layout_below="@id/emergency_mobile_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>